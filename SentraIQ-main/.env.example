# Application Settings
APP_NAME=SentraIQ
APP_VERSION=1.0.0
ENVIRONMENT=development

# Database
# For local development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./sentraiq.db
# For production (PostgreSQL - automatically set by Render):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# Storage
RAW_LOGS_PATH=./storage/raw_logs
RAW_DOCUMENTS_PATH=./storage/raw_documents

# OpenAI (REQUIRED for AI-powered features)
OPENAI_API_KEY=your_openai_api_key_here

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Frontend (for production deployment)
VITE_API_URL=https://sentraiq-backend.onrender.com
