{
  "framework": "SWIFT CSP v2024",
  "version": "1.4",
  "last_updated": "2026-01-13",
  "swift_architecture_types": [
    {
      "id": "A1",
      "name": "Architecture Type A1",
      "description": "User owns the messaging interface and communication interface, located on user premises.",
      "logic_summary": "Full Scope. All controls applicable."
    },
    {
      "id": "A2",
      "name": "Architecture Type A2",
      "description": "User owns messaging interface (on premises); communication interface is with a Service Provider.",
      "logic_summary": "High Scope. Most controls applicable, except those specific to the communication interface itself."
    },
    {
      "id": "A3",
      "name": "Architecture Type A3",
      "description": "User uses a Service Provider for both messaging and communication interfaces (e.g. Alliance Cloud). Local footprint is minimal (endpoints).",
      "logic_summary": "Reduced Scope. Heavy reliance on Service Provider controls. Focus on endpoints and user access."
    },
    {
      "id": "A4",
      "name": "Architecture Type A4",
      "description": "User connects via a connector (middleware) or back-office system to a Service Provider.",
      "logic_summary": "Middleware Focused. Controls apply to the connector/middleware environment."
    },
    {
      "id": "B",
      "name": "Architecture Type B",
      "description": "User has no local SWIFT infrastructure; uses a Service Provider's application (GUI) directly.",
      "logic_summary": "Minimum Scope. Focus on user PC security, identity management, and business processes."
    }
  ],
